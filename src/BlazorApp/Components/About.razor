<section class="light" id="about">
    <img class="background" src="../images/mosaic.svg" alt="purple and blue abstract background" />
    <h2>About Myself</h2>
    <div style="backgroundColor: white; width: 50%; padding: 4rem; margin: 3rem auto; text-align: center;">
        @if (aboutme == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <p class="large">@aboutme.Description</p>
            <hr />
            <ul style="text-align: left; columns: 2; fontSize: 1.25rem; margin: 2rem 3rem;, gap: 3rem;">
                @foreach (var skill in aboutme.Skills)
                {
                    <li key="@skill">@skill</li>
                }
            </ul>
            <hr />
            <p style="padding: 1rem 3rem 0;">@aboutme.DetailOrQuote</p>
        }
    </div>
</section>

@code {
    [Parameter]
    public HttpClient? Http { get; set; } = default;

    private AboutMe? aboutme;

    protected override async Task OnInitializedAsync()
    {
        aboutme = await Http.GetFromJsonAsync<AboutMe>("sample-data/aboutme.json");
    }
}
